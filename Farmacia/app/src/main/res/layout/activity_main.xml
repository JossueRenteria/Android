<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#2bcbff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Farmacia Conchita"
        android:id="@+id/textView_FarmaciaConchita"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/textView_Pregunta" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="¿Qué desea realizar?"
        android:id="@+id/textView_Pregunta"
        android:textColor="#000000"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buscar"
        android:id="@+id/button_Buscar"
        android:layout_marginTop="59dp"
        android:layout_below="@+id/textView_Pregunta"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Insertar"
        android:id="@+id/button_Insertar"
        android:layout_marginTop="55dp"
        android:layout_below="@+id/button_Buscar"
        android:layout_alignEnd="@+id/button_Buscar" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eliminar"
        android:id="@+id/button_Eliminar"
        android:layout_marginTop="55dp"
        android:layout_below="@+id/button_Insertar"
        android:layout_alignStart="@+id/button_Insertar" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@mipmap/ic_launcher"
        android:layout_below="@+id/textView_FarmaciaConchita"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
